{
  "openapi": "3.1.0",
  "info": {
    "title": "ChatGPT Dynamic Widgets API",
    "description": "API for creating dynamic widgets that display as formatted markdown in ChatGPT. Simply POST to /api/widgets with your widget type and data, and receive formatted content ready to display.",
    "version": "3.0.0"
  },
  "servers": [
    {
      "url": "https://frontend-production-d329.up.railway.app",
      "description": "Production Frontend (proxies to backend automatically)"
    }
  ],
  "paths": {
    "/api/widgets": {
      "post": {
        "operationId": "createWidget",
        "summary": "Create a widget visualization",
        "description": "Creates a widget with the specified type and data. Returns formatted markdown or content in the 'markdown' or 'content' field for immediate display. Supports: dashboard (metrics), chart (bar/line/pie/doughnut), table (data rows), timeline (events), comparison (pricing/features).",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["dashboard", "chart", "table", "timeline", "comparison"],
                    "description": "The type of widget to create"
                  },
                  "title": {
                    "type": "string",
                    "description": "The title of the widget"
                  },
                  "data": {
                    "type": "array",
                    "description": "Data for chart widgets",
                    "items": {
                      "type": "number"
                    }
                  },
                  "labels": {
                    "type": "array",
                    "description": "Labels for chart widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "chartType": {
                    "type": "string",
                    "enum": ["bar", "line", "pie", "doughnut"],
                    "description": "Type of chart (for chart widgets)"
                  },
                  "metrics": {
                    "type": "array",
                    "description": "Metrics for dashboard widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "label": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string"
                        },
                        "change": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "headers": {
                    "type": "array",
                    "description": "Column headers for table widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "rows": {
                    "type": "array",
                    "description": "Row data for table widgets",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "events": {
                    "type": "array",
                    "description": "Events for timeline widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string",
                          "enum": ["blue", "green", "purple", "orange", "red"]
                        }
                      }
                    }
                  },
                  "items": {
                    "type": "array",
                    "description": "Items for comparison widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "price": {
                          "type": "string"
                        },
                        "features": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "highlight": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              },
              "examples": {
                "chartBar": {
                  "summary": "Bar Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "Ventas Mensuales 2025",
                    "chartType": "bar",
                    "labels": ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio"],
                    "data": [12000, 15000, 18000, 22000, 25000, 27000]
                  }
                },
                "chartLine": {
                  "summary": "Line Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "User Growth",
                    "chartType": "line",
                    "labels": ["Jan", "Feb", "Mar", "Apr"],
                    "data": [1000, 1500, 2200, 3100]
                  }
                },
                "dashboard": {
                  "summary": "Dashboard Example",
                  "value": {
                    "type": "dashboard",
                    "title": "Sales Dashboard Q1",
                    "metrics": [
                      {
                        "value": "$125,430",
                        "label": "Total Revenue",
                        "color": "green",
                        "change": "+18%"
                      },
                      {
                        "value": "1,234",
                        "label": "New Customers",
                        "color": "blue",
                        "change": "+25%"
                      }
                    ]
                  }
                },
                "table": {
                  "summary": "Table Example",
                  "value": {
                    "type": "table",
                    "title": "Top Products",
                    "headers": ["Product", "Sales", "Stock"],
                    "rows": [
                      ["iPhone 15", "$89,450", "125"],
                      ["MacBook Air", "$145,320", "45"],
                      ["AirPods Pro", "$34,890", "234"]
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Widget created successfully with markdown formatted output for display in chat",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean"
                    },
                    "widget": {
                      "type": "object",
                      "description": "The widget data structure"
                    },
                    "markdown": {
                      "type": "string",
                      "description": "Formatted markdown/content for display (may also be in 'content' field)"
                    },
                    "content": {
                      "type": "string",
                      "description": "Formatted content for display (alternative to 'markdown' field)"
                    },
                    "type": {
                      "type": "string",
                      "description": "Content type (usually 'markdown')"
                    },
                    "message": {
                      "type": "string",
                      "description": "Success message"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    }
  }
}
