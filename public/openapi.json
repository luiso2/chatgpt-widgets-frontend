{
  "openapi": "3.1.0",
  "info": {
    "title": "ChatGPT Dynamic Widgets API",
    "description": "API for creating dynamic visual widgets (charts, dashboards, tables) that display as interactive HTML visualizations in ChatGPT. POST to /api/widgets with your widget type and data to receive a visual widget URL that ChatGPT will render inline.",
    "version": "4.0.0"
  },
  "servers": [
    {
      "url": "https://frontend-production-d329.up.railway.app",
      "description": "Production Frontend with visual widget rendering"
    }
  ],
  "paths": {
    "/api/widgets": {
      "post": {
        "operationId": "createWidget",
        "summary": "Create a visual widget",
        "description": "Creates interactive visual widgets and returns a clickable URL. When user clicks the link, it redirects to the live widget page. Supports charts (bar/line/pie/doughnut), dashboards with KPIs, and data tables.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["dashboard", "chart", "table", "timeline", "comparison"],
                    "description": "The type of widget to create"
                  },
                  "title": {
                    "type": "string",
                    "description": "The title of the widget"
                  },
                  "data": {
                    "type": "array",
                    "description": "Data for chart widgets",
                    "items": {
                      "type": "number"
                    }
                  },
                  "labels": {
                    "type": "array",
                    "description": "Labels for chart widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "chartType": {
                    "type": "string",
                    "enum": ["bar", "line", "pie", "doughnut"],
                    "description": "Type of chart (for chart widgets)"
                  },
                  "metrics": {
                    "type": "array",
                    "description": "Metrics for dashboard widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "label": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string"
                        },
                        "change": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "headers": {
                    "type": "array",
                    "description": "Column headers for table widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "rows": {
                    "type": "array",
                    "description": "Row data for table widgets",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "events": {
                    "type": "array",
                    "description": "Events for timeline widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string"
                        },
                        "title": {
                          "type": "string"
                        },
                        "description": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string",
                          "enum": ["blue", "green", "purple", "orange", "red"]
                        }
                      }
                    }
                  },
                  "items": {
                    "type": "array",
                    "description": "Items for comparison widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string"
                        },
                        "price": {
                          "type": "string"
                        },
                        "features": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "highlight": {
                          "type": "boolean"
                        }
                      }
                    }
                  }
                }
              },
              "examples": {
                "chartBar": {
                  "summary": "Bar Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "Ventas Mensuales 2025",
                    "chartType": "bar",
                    "labels": ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio"],
                    "data": [12000, 15000, 18000, 22000, 25000, 27000]
                  }
                },
                "chartLine": {
                  "summary": "Line Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "User Growth",
                    "chartType": "line",
                    "labels": ["Jan", "Feb", "Mar", "Apr"],
                    "data": [1000, 1500, 2200, 3100]
                  }
                },
                "dashboard": {
                  "summary": "Dashboard Example",
                  "value": {
                    "type": "dashboard",
                    "title": "Sales Dashboard Q1",
                    "metrics": [
                      {
                        "value": "$125,430",
                        "label": "Total Revenue",
                        "color": "green",
                        "change": "+18%"
                      },
                      {
                        "value": "1,234",
                        "label": "New Customers",
                        "color": "blue",
                        "change": "+25%"
                      }
                    ]
                  }
                },
                "table": {
                  "summary": "Table Example",
                  "value": {
                    "type": "table",
                    "title": "Top Products",
                    "headers": ["Product", "Sales", "Stock"],
                    "rows": [
                      ["iPhone 15", "$89,450", "125"],
                      ["MacBook Air", "$145,320", "45"],
                      ["AirPods Pro", "$34,890", "234"]
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Widget created successfully. Returns both a visual URL for iframe rendering AND markdown text as fallback.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {
                      "type": "boolean",
                      "description": "Indicates if widget creation succeeded"
                    },
                    "widgetUrl": {
                      "type": "string",
                      "format": "uri",
                      "description": "Clickable URL that redirects to the interactive widget page. Present this as a link that users can click to view the visualization."
                    },
                    "widget": {
                      "type": "object",
                      "description": "The widget data structure sent to create the widget"
                    },
                    "markdown": {
                      "type": "string",
                      "description": "Fallback: Formatted markdown text version of the widget for text-only displays"
                    },
                    "content": {
                      "type": "string",
                      "description": "Fallback: Alternative text content (same as markdown)"
                    },
                    "type": {
                      "type": "string",
                      "description": "Content type: 'visual-widget' for graphical rendering, 'markdown' for text fallback"
                    },
                    "message": {
                      "type": "string",
                      "description": "Success message with instructions"
                    }
                  },
                  "required": ["success", "widgetUrl"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request - missing required fields or invalid widget type"
          },
          "500": {
            "description": "Server error - backend unavailable or failed to generate widget"
          }
        }
      }
    }
  }
}
