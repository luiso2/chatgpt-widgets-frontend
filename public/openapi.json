{
  "openapi": "3.1.0",
  "info": {
    "title": "ChatGPT Dynamic Widgets API",
    "description": "Creates interactive visual widgets and returns a clickable URL. Always present the widgetUrl as a link for users to click and view the widget.",
    "version": "4.2.0"
  },
  "servers": [
    {
      "url": "https://frontend-production-d329.up.railway.app",
      "description": "Production Frontend with visual widget rendering"
    }
  ],
  "paths": {
    "/api/widgets": {
      "post": {
        "operationId": "createWidget",
        "summary": "Create a visual widget",
        "description": "Creates a widget and returns ONLY a widgetUrl. You MUST present the widgetUrl as a clickable link in your response. Do NOT show raw data. Tell the user to click the link to view their interactive widget.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["dashboard", "chart", "table", "timeline", "comparison"],
                    "description": "The type of widget to create"
                  },
                  "title": {
                    "type": "string",
                    "description": "The title of the widget"
                  },
                  "data": {
                    "type": "array",
                    "description": "Data for chart widgets",
                    "items": {
                      "type": "number"
                    }
                  },
                  "labels": {
                    "type": "array",
                    "description": "Labels for chart widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "chartType": {
                    "type": "string",
                    "enum": ["bar", "line", "pie", "doughnut"],
                    "description": "Type of chart (for chart widgets)"
                  },
                  "metrics": {
                    "type": "array",
                    "description": "Metrics for dashboard widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "value": {
                          "type": "string"
                        },
                        "label": {
                          "type": "string"
                        },
                        "color": {
                          "type": "string"
                        },
                        "change": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "headers": {
                    "type": "array",
                    "description": "Column headers for table widgets",
                    "items": {
                      "type": "string"
                    }
                  },
                  "rows": {
                    "type": "array",
                    "description": "Row data for table widgets",
                    "items": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "events": {
                    "type": "array",
                    "description": "Events for timeline widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "date": {
                          "type": "string",
                          "description": "Event date"
                        },
                        "title": {
                          "type": "string",
                          "description": "Event title"
                        },
                        "description": {
                          "type": "string",
                          "description": "Event description"
                        },
                        "color": {
                          "type": "string",
                          "enum": ["blue", "green", "purple", "orange", "red"],
                          "description": "Event color badge"
                        }
                      },
                      "required": ["date", "title", "description", "color"]
                    }
                  },
                  "items": {
                    "type": "array",
                    "description": "Items for comparison widgets",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "Item name (e.g., plan name)"
                        },
                        "price": {
                          "type": "string",
                          "description": "Item price"
                        },
                        "features": {
                          "type": "array",
                          "description": "List of features",
                          "items": {
                            "type": "string"
                          }
                        },
                        "highlight": {
                          "type": "boolean",
                          "description": "Whether to highlight this item"
                        }
                      },
                      "required": ["name", "price", "features", "highlight"]
                    }
                  }
                }
              },
              "examples": {
                "chartBar": {
                  "summary": "Bar Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "Ventas Mensuales 2025",
                    "chartType": "bar",
                    "labels": ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio"],
                    "data": [12000, 15000, 18000, 22000, 25000, 27000]
                  }
                },
                "chartLine": {
                  "summary": "Line Chart Example",
                  "value": {
                    "type": "chart",
                    "title": "User Growth",
                    "chartType": "line",
                    "labels": ["Jan", "Feb", "Mar", "Apr"],
                    "data": [1000, 1500, 2200, 3100]
                  }
                },
                "dashboard": {
                  "summary": "Dashboard Example",
                  "value": {
                    "type": "dashboard",
                    "title": "Sales Dashboard Q1",
                    "metrics": [
                      {
                        "value": "$125,430",
                        "label": "Total Revenue",
                        "color": "green",
                        "change": "+18%"
                      },
                      {
                        "value": "1,234",
                        "label": "New Customers",
                        "color": "blue",
                        "change": "+25%"
                      }
                    ]
                  }
                },
                "table": {
                  "summary": "Table Example",
                  "value": {
                    "type": "table",
                    "title": "Top Products",
                    "headers": ["Product", "Sales", "Stock"],
                    "rows": [
                      ["iPhone 15", "$89,450", "125"],
                      ["MacBook Air", "$145,320", "45"],
                      ["AirPods Pro", "$34,890", "234"]
                    ]
                  }
                },
                "timeline": {
                  "summary": "Timeline Example",
                  "value": {
                    "type": "timeline",
                    "title": "Project Milestones",
                    "events": [
                      {
                        "date": "Jan 2025",
                        "title": "Project Kickoff",
                        "description": "Initial planning and team formation",
                        "color": "blue"
                      },
                      {
                        "date": "Feb 2025",
                        "title": "Design Phase",
                        "description": "UI/UX design and prototyping",
                        "color": "purple"
                      },
                      {
                        "date": "Mar 2025",
                        "title": "Development Started",
                        "description": "Backend and frontend implementation",
                        "color": "green"
                      }
                    ]
                  }
                },
                "comparison": {
                  "summary": "Comparison Example",
                  "value": {
                    "type": "comparison",
                    "title": "Pricing Plans",
                    "items": [
                      {
                        "name": "Basic",
                        "price": "$9/month",
                        "features": ["5 users", "10GB storage", "Email support"],
                        "highlight": false
                      },
                      {
                        "name": "Pro",
                        "price": "$29/month",
                        "features": ["25 users", "100GB storage", "Priority support", "Advanced analytics"],
                        "highlight": true
                      },
                      {
                        "name": "Enterprise",
                        "price": "$99/month",
                        "features": ["Unlimited users", "1TB storage", "24/7 phone support", "Custom integrations"],
                        "highlight": false
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Widget created successfully. Returns a clickable URL to view the interactive widget.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "widgetUrl": {
                      "type": "string",
                      "format": "uri",
                      "description": "Direct link to the interactive widget. Present this URL prominently as a clickable link."
                    },
                    "title": {
                      "type": "string",
                      "description": "Title of the created widget"
                    },
                    "description": {
                      "type": "string",
                      "description": "Brief description of the widget"
                    }
                  },
                  "required": ["widgetUrl"]
                }
              }
            }
          },
          "400": {
            "description": "Invalid request - missing required fields or invalid widget type"
          },
          "500": {
            "description": "Server error - backend unavailable or failed to generate widget"
          }
        }
      }
    }
  }
}
