# ============================================
# Environment Variables Configuration
# ============================================
# Copy this file to .env.local and update with your values

# API Backend URL (Backend Express.js API on Railway)
# Replace with your backend Railway URL
NEXT_PUBLIC_API_URL=https://gpt-widget-production.up.railway.app

# Base URL (Frontend Next.js app on Railway)
# Railway automatically sets RAILWAY_PUBLIC_DOMAIN
# If deploying elsewhere, set this manually
NEXT_PUBLIC_BASE_URL=https://YOUR-FRONTEND-APP.up.railway.app

# Environment
NODE_ENV=production
